<div ng-controller="AchievementsCtrl">
  <div id="achievement-list-container" >
    <ul>
      <li ng-repeat="achievement in achievements" ng-click="showAchievement(achievement, $index)">
        <h3 ng-class="{active: $index == selectedRow}">{{achievement.title}}</h3>
      </li>
    </ul>
  </div>

  <div id="achievement-view-container" ng-show="selectedAchievement">
    <h2>{{selectedAchievement.title}}</h2>
    <p>{{selectedAchievement.description}}</p>
  </div>
</div>
  